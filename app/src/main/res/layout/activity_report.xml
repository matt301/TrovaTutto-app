<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/sfondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="#CCFFFFFF"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reportACT_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="TITOLO"
                android:textAlignment="center"
                android:textSize="32sp"/>
            <TextView
                android:id="@+id/reportACT_tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Sottotitolo"
                android:textAlignment="center"
                android:textSize="24sp"/>

            <ImageView
                android:id="@+id/reportACT_iv_image"
                android:layout_width="425dp"
                android:layout_height="250dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/no_image"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/reportACT_tv_staticTxAutor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:text="AUTORE: " />


                <TextView
                    android:id="@+id/reportACT_tv_autor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignTop="@+id/reportACT_tv_staticTxAutor"
                    android:layout_toEndOf="@+id/reportACT_tv_staticTxAutor"
                    android:text="Andrea Raineri" />

                <Button
                    android:id="@+id/reportACT_bt_autor"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="80dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="Show" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/reportACT_tv_staticTxDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="DESCRIZIONE: " />

                <TextView
                    android:id="@+id/reportACT_tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="80dp"
                    android:layout_alignStart="@+id/reportACT_tv_staticTxDescription"
                    android:layout_below="@+id/reportACT_tv_staticTxDescription"
                    android:text="Descrivo tutto" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/reportACT_tv_staticTxAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="80dp"
                    android:text="Map " />


                <TextView
                    android:id="@+id/reportACT_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignTop="@+id/reportACT_tv_staticTxAddress"
                    android:layout_toEndOf="@+id/reportACT_tv_staticTxAddress"
                    android:text="Indirizzo" />

                <Button
                    android:id="@+id/reportACT_bt_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="80dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text=">>>" />


            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>